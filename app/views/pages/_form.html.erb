<%= simple_form_for @page do |f| %>
    <%= f.input :name %>
    <%= f.input :title %>

    <%= f.text_area :content, :class => "tinymce", :rows => 20, :cols => 120 %>

    <%= f.button :submit, :class=>"btn btn-mini btn-success" %>
    <%= link_to 'Cancel', pages_url, :class=>"btn btn-mini" %>
<% end %>