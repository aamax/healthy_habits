<!DOCTYPE html>
<html ng-app="HHabits">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Healthy Habits" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Healthy Habits" %>">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body class="<%= controller_name %> <%= action_name %> body_general">
<div class="container">
  <% if params[:controller] != "devise/sessions" %>
      <div class="row">
        <div class="span12">
          <%= render 'layouts/navigation' %>

          <%= render "layouts/top_banner" %>


          <%= render "layouts/sign_up_box" %>

          <%= render 'layouts/messages' %>

        </div>
      </div>

      <div id="main" role="main">
        <div class="row main_page_body">
          <% if request.env["PATH_INFO"] == '/special_offer' %>
              <div class="span12 special_offer_body">
                <%= yield %>
              </div>
          <% else %>
              <div class="span9 main_section">
                <%= yield %>
              </div>
              <div class="span3 side_section">
                <%= render 'layouts/side_section' %>
              </div>
          <% end %>
        </div>
      </div>
      <!--! end of #main -->


      <br/> <br/> <br/> <br/> <br/>
      <%= render 'layouts/footer' %>
  <% else %>
      <div id="main" role="main">
        <div class="row main_page_body">
          <div class="span9 main_section">
            <br/> <br/><br/><br/><br/><br/><br/><br/><br/>
            <%= yield %>
          </div>
        </div>


      </div>
  <% end %>

</div>


</body>
</html>
