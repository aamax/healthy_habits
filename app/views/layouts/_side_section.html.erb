
<% if request.env["PATH_INFO"] != "/testimonials" %>
<div class="testimonial_section">
  <h3>Testimonials</h3>

  <div class='testimony_box'>
    <div class='testimony_boxtop'>
      <div></div>
    </div>
    <div class='testimony_boxcontent'>
      <ul>
        <% arr = Testimonial.all
           testimonial = arr[rand(arr.length)]
           unless testimonial.nil?
        %>
            <li class="testimonial_section">
              <%= image_tag testimonial.thumbnail.url(:thumb), :class=>"testimonial_image" %>
              <%= testimonial.comment.html_safe %> <br/>
              <span class="testimonial_name">- <%= testimonial.name %><br/>&nbsp;&nbsp;<%= testimonial.date %> </span>
              <br/>   <br/>
              <%= link_to "Read More Testimonials >>", testimonials_path, :class=>"btn btn-mini" %>
              <br/>
              <br/>
            </li>
        <% end %>
      </ul>
    </div>
    <div class='testimony_boxbottom'>
      <div></div>
    </div>
  </div>


</div>

<% else %>
      Non - testimonial side section content as defined later...
<% end %>