      <div class="nav-collapse collapse">
        <ul class="nav">

          <li id="home"><%= link_to "Home", root_path, :id => "home_menu" %></li>


          <li id="is_this_you"><%= link_to "Is This You?", "/pages/is_this_you", :id => "is_this_you_menu" %></li>
