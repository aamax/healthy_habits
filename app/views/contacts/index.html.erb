<h1>Listing contacts  [Count: <%= @contacts.length %>]</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="2" style="text-align: center">Operations</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.email %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact), :class=>"btn btn-small btn-primary btn_test" %></td>
    <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' },
                    :class=>"btn btn-small btn-danger btn_test" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contact', new_contact_path %>
