<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <table>
      <tr>
        <td><%= f.input :name, :class=>"span2" %></td>
        <td>&nbsp;</td>
        <td><%= f.input :product_id, :class=>"span1" %></td>
        <td>&nbsp;</td>
        <td><%= f.input :active %></td>
      </tr>
      <tr>
        <td><%= f.input :amount %></td>
        <td>&nbsp;</td>
        <td colspan="3"><%= f.input :partial %></td>
      </tr>

      <tr>
        <td colspan="5">
          <%= f.text_area :description, :class => "tinymce", :rows => 20, :cols => 120 %>
        </td>
      </tr>
    </table>


  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
