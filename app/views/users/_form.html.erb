<%= form_for(user) do |f| %>

    <%= render 'shared/error_messages', :object => f.object %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %><br />
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="field">
      Administrator: <%= check_box_tag("Administrator", value = "1",
                        checked = f.object.admin?) %>
      <br/>

    </div>
    <div class="actions">
      <%= f.submit "Submit", :class=>"span1 btn btn-success btn-mini" %>
    </div>
<% end %>